# Server
APP_HOST=0.0.0.0
APP_PORT=8077

# Database (required)
DATABASE_URL=postgresql://yt_user:SECRET@127.0.0.1:5432/yt_db

# Security (required SECRET_KEY)
SECRET_KEY=please-change-me
SESSION_COOKIE_NAME=ytsid
SESSION_TTL_SECONDS=1209600
# Set to false if you access the app via http (not https)
SESSION_COOKIE_SECURE=true

# Storage (required)
STORAGE_ROOT=/var/www/yurtube/storage
STORAGE_PUBLIC_BASE_URL=

# App
BASE_URL=
DEBUG=false
## `yurtube` or `standard`, or..
VIDEO_PLAYER=yurtube
# Brand assets
BRAND_LOGO_URL=static/img/YT_long.png
FAVICON_URL=static/img/YT_fav32.png
APPLE_TOUCH_ICON_URL=static/img/YT_fav128.png
# Enable/Disable right bar list with recommended videos
RIGHTBAR_ENABLED=1
RIGHTBAR_LIMIT=10

# Check password strengthness: from 0 (off) to 4 (strongest)
PASSWORD_MIN_SCORE=4

# Video editing defaults
EDIT_UI_ENABLED=true
DEFAULT_RENDITION_PRESETS=1080p,720p,480p,360p
DEFAULT_RENDITION_CODEC=vp9

# Embed defaults (applied to new videos unless overridden)
EMBED_DEFAULT_AUTOPLAY=0
EMBED_DEFAULT_MUTE=0
EMBED_DEFAULT_LOOP=0

# Fallback placeholder for not-found videos (static/anim. images).
FALLBACK_PLACEHOLDER_URL=static/img/fallback_video_notfound.gif

# Search engine
SEARCH_BACKEND=manticore

# Postgres FTS
PG_TS_CONFIG=yt_multi
TRGM_THRESHOLD=0.15

# Manticore Search Engine
MANTICORE_HOST=127.0.0.1
MANTICORE_HTTP_PORT=9308
# manticore_http: direct HTTP to Manticore + CLI fallback
# service_http: call external microservice
SEARCH_INDEX_TRANSPORT=manticore_http
# required when SEARCH_INDEX_TRANSPORT=service_http
SEARCH_INDEX_SERVICE_URL=http://indexer.internal:8080
MANTICORE_INDEX_VIDEOS=videos_rt
MANTICORE_INDEX_SUBTITLES=subtitles_rt
PG_DEFAULT_TS_LANG=russian
