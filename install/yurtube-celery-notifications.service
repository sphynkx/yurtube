[Unit]
Description=YurTube - Celery Notifications Worker
Wants=network-online.target redis.service
After=network-online.target redis.service

[Service]
Type=simple
WorkingDirectory=/var/www/yurtube
ExecStart=/var/www/yurtube/.venv/bin/python -m celery -A services.notifications.celery_app worker -l info --concurrency=1 --hostname=notif@%H --prefetch-multiplier=1 -Q notify_immediate,notify_batch
Environment=PYTHONUNBUFFERED=1
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal
KillSignal=SIGTERM
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target